<resources>

    <!-- Base application theme. -->
    <style name="TodoAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <!--Custom Button-->
    <style name="TodoAppTheme.Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">@dimen/padding_normal</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/padding_normal</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <!--Custom toolbar-->
    <style name="TodoAppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">

    </style>

    <style name="TodoAppTheme.TextAppearance">

    </style>

</resources>
